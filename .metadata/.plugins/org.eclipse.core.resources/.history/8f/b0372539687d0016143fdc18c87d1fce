 <br>  <br>  <input type="button" value="checkValidation" id="checkValidation"   onclick="checkValidation()" /> 
 <script>   
 function checkValidation() 
 {  
 var studentID = new RegExp(/[0]{1}\d{8}/); 
 var studentName = /[a-zA-Z]/;
 var phoneNoMatch = new RegExp(/[+][0-9]{2}-[1-9]{3}-[19]{4}/);
 var verified = true;
 console.log(document.getElementById("studentid").value);    
 if (!(document.getElementById("studentid").value).match(studentID)) 
 {     
 document.getElementById("student").innerHTML = "Student ID cannot have characters";    
 document.getElementById("student").style.color='red';
 var verified = false;
 
 } 
 else 
 {
	 document.getElementById("student").innerHTML = "";
	 var verified = true;
 }
 alert("Student Name::"+document.getElementById("studentname").value);
 alert("CASE: "+document.getElementById("studentname").value.test(studentName));
 if (!(document.getElementById("studentname").value).match(studentName)) 
 {     
 document.getElementById("studentName").innerHTML = "Student Name cannot have numbers";    
 document.getElementById("studentName").style.color='red';
 var verified = false;
 } 
 else 
 {
	 document.getElementById("studentName").innerHTML = "";
	 var verified = true;
 }
 var emailIdMatch = new RegExp(/[a-zA-Z0-9]*?[@][a-zA-Z09]*?[.][a-zA-Z0-9]{3}/);   
 console.log(document.getElementById("Email").value); 
 if (!(document.getElementById("Email").value).match(emailIdMatch))
 {     
	 document.getElementById("email").innerHTML = "Please enter valid email id ";    
	 document.getElementById("email").style.color='red';    
 } 
 else 
 {     
	 document.getElementById("email").innerHTML = "";    
 }   
 } 
 }
 
 </script>

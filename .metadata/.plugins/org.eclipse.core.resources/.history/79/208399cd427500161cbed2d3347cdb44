    document.getElementById("phone").innerHTML = "Phone no should start with + and 2 digit country code, followed by hyphen and then 3 digit area code, hyphen and 4 digit phone no ";     document.getElementById("phone").style.color='red';    } else {     document.getElementById("phone").innerHTML = "";    }        var emailIdMatch = new RegExp(/[a-zA-Z0-9]*?[@][a-zA-Z09]*?[.][a-zA-Z0-9]{3}/);    console.log(document.getElementById("Email").value);    if (!(document.getElementById("Email").value)      .match(emailIdMatch)) {     document.getElementById("email").innerHTML = "Please enter valid email id ";     document.getElementById("email").style.color='red';    } else {     document.getElementById("email").innerHTML = "";    }   }  </script> </body> </html> 
   var routingNoMatch = new RegExp(/\d{9}/);    console.log(document.getElementById("RoutingNo").value);    if (!(document.getElementById("RoutingNo").value)      .match(routingNoMatch)) {     document.getElementById("routing").innerHTML = "Routing no should be 9 digits and cannot be empty";     document.getElementById("routing").style.color='red';    } else {     document.getElementById("routing").innerHTML = "";    } 
 
   var phoneNoMatch = new RegExp(/[+][0-9]{2}-[1-9]{3}-[19]{4}/);    console.log(document.getElementById("PhoneNo").value);    if (!(document.getElementById("PhoneNo").value)      .match(phoneNoMatch)) { 

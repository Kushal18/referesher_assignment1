<!DOCTYPE html>
<html>
<body>

<h1> Team Rankings </h1>
<p>Select a cricket team from the dropdown</p>

<select id="cricketTeam" onchange="teamRanking()">
  <option value="Australia">Australia
  <option value="India">India
  <option value="South Africa">South Africa
  <option value="Pakistan">Pakistan
</select>

<p>When you select a Team it's Test , ODI and T20 ranking details will be displayed</p>
<p id="demo1"></p>
<p id="demo"></p>


<script>
var india = "Test Ranking : 2" + '<br>' + "ODI ranking: 1" + '<br>'   
+ "T20 Ranking: 5" + '<br>';

var pakistan = "Test Ranking : 1" + '<br>' + "ODI ranking: 7" + '<br>'   
+ "T20 Ranking: 3 + '<br>';

var australia = "Test Ranking : 3" + '<br>' + "ODI ranking: 4" + '<br>'   
+ "T20 Ranking: 6 + '<br>';


var southafrica = "Test Ranking : 5" + '<br>' + "ODI ranking: 8" + '<br>'   
+ "T20 Ranking: 10 + '<br>';


function teamRanking() {
    var team = document.getElementById("cricketTeam").value;
    if (team === "India"){
    	document.getElementById("demo1").innerHTML = "India Test , ODI and T20 world Ranking are as follows: " +"<br>" ;
    	document.getElementById("demo").innerHTML =india; 
    } else if (team === "Australia"){
    	document.getElementById("demo1").innerHTML = "India Test , ODI and T20 world Ranking are as follows: " +"<br>" ;
    	document.getElementById("demo").innerHTML =india; 
    }
    else if (team === "South Africa"){
    	document.getElementById("demo1").innerHTML = "India Test , ODI and T20 world Ranking are as follows: " +"<br>" ;
    	document.getElementById("demo").innerHTML =india; 
    }
    else if (team === "Pakistan"){
    	document.getElementById("demo1").innerHTML = "India Test , ODI and T20 world Ranking are as follows: " +"<br>" ;
    	document.getElementById("demo").innerHTML =india; 
    }
    
}
</script>

</body>
